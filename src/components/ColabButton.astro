---
interface Props {
  path?: string;
  githubRepo?: string;
  code?: string;
}

const { path, githubRepo = 'lmfast/slmhub', code } = Astro.props;

const colabBase = 'https://colab.research.google.com/github';
const repoParts = githubRepo.split('/');
const owner = repoParts[0];
const repo = repoParts[1];
const branch = 'main';

const fileUrl = path ? `${colabBase}/${owner}/${repo}/blob/${branch}/${path}` : '#';

---

<a 
  href={fileUrl} 
  target="_blank" 
  rel="noopener noreferrer" 
  class="colab-button group"
  title="Open in Google Colab"
  aria-label="Open this code in Google Colab"
>
  <img 
    src="https://colab.research.google.com/assets/colab-badge.svg" 
    alt="Open In Colab" 
    class="colab-badge" 
  />
</a>

<style>
  .colab-button {
    display: inline-flex;
    align-items: center;
    margin: 0.5rem 0;
    padding: 0.35rem 0.65rem;
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(249, 171, 0, 0.05);
    border: 1px solid rgba(249, 171, 0, 0.2);
    position: relative;
    overflow: hidden;
  }
  
  .colab-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(249, 171, 0, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }
  
  .colab-button:hover::before {
    width: 200px;
    height: 200px;
  }
  
  .colab-button:hover {
    transform: translateY(-2px) scale(1.05);
    background: rgba(249, 171, 0, 0.1);
    border-color: rgba(249, 171, 0, 0.4);
    box-shadow: 0 4px 12px rgba(249, 171, 0, 0.25);
  }
  
  .colab-badge {
    height: 1.5rem;
    width: auto;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    z-index: 1;
  }
  
  .colab-button:hover .colab-badge {
    transform: scale(1.08) rotate(2deg);
  }
  
  [data-theme="dark"] .colab-button {
    background: rgba(249, 171, 0, 0.08);
    border-color: rgba(249, 171, 0, 0.25);
  }
  
  [data-theme="dark"] .colab-button:hover {
    background: rgba(249, 171, 0, 0.15);
    border-color: rgba(249, 171, 0, 0.4);
    box-shadow: 0 4px 16px rgba(249, 171, 0, 0.3);
  }
</style>

