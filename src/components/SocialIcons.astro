---
import DefaultSocialIcons from '@astrojs/starlight/components/SocialIcons.astro';
---

<div class="social-wrapper">
  <!-- Star on GitHub Button -->
  <a href="https://github.com/lmfast/slmhub" target="_blank" rel="noopener noreferrer" class="star-btn">
    <svg height="16" viewBox="0 0 16 16" width="16" class="star-icon">
       <path fill-rule="evenodd" d="M8 .25a.75.75 0 01.673.418l1.882 3.815 4.21.612a.75.75 0 01.416 1.279l-3.046 2.97.719 4.192a.75.75 0 01-1.088.791L8 12.347l-3.766 1.98a.75.75 0 01-1.088-.79l.72-4.194L.818 6.374a.75.75 0 01.416-1.28l4.21-.611L7.327.668A.75.75 0 018 .25z"></path>
    </svg>
    <span class="label">Star on GitHub</span>
  </a>

  <div class="separator"></div>

  <!-- Standard Social Icons -->
  <DefaultSocialIcons {...Astro.props} />
</div>

<style>
  .social-wrapper {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  /* GitHub Star Button */
  .star-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    height: 32px;
    padding: 0 0.8rem;
    background-color: var(--sl-color-bg-nav);
    color: var(--sl-color-text-accent);
    border: 1px solid var(--sl-color-hairline);
    border-radius: 999px;
    font-size: 0.8rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
    white-space: nowrap;
  }

  .star-btn:hover {
    background-color: var(--sl-color-gray-6);
    color: var(--sl-color-white);
    border-color: var(--sl-color-gray-4);
  }

  .star-icon {
    fill: currentColor;
  }

  /* Hide textual label on tiny screens, show icon only? */
  @media (max-width: 400px) {
    .label {
      display: none;
    }
    .star-btn {
      padding: 0 0.5rem;
    }
  }

  /* Vertical separator */
  .separator {
    width: 1px;
    height: 1.5rem;
    background-color: var(--sl-color-hairline);
  }
</style>
