---
/**
 * Enhanced Code Block Component
 * Provides copy button and Colab integration for Python code
 */
interface Props {
  code: string;
  language?: string;
  showLineNumbers?: boolean;
  highlightLines?: string;
}

const { code, language = 'text', showLineNumbers = true, highlightLines } = Astro.props;

// Determine if this is Python code for Colab button
const isPython = language === 'python' || language === 'py';

// Generate Colab URL for Python code
function generateColabUrl(codeContent: string): string {
  const notebook = {
    cells: [{
      cell_type: 'code',
      source: codeContent.split('\n'),
      metadata: {},
      outputs: [],
      execution_count: null
    }],
    metadata: {
      kernelspec: {
        display_name: 'Python 3',
        language: 'python',
        name: 'python3'
      },
      language_info: {
        name: 'python',
        version: '3.10.0'
      }
    },
    nbformat: 4,
    nbformat_minor: 0
  };
  
  // Create a data URL for the notebook
  const notebookJson = JSON.stringify(notebook);
  const encoded = encodeURIComponent(notebookJson);
  
  // Use GitHub Gist approach (simplified - in production, create actual gist)
  return `https://colab.research.google.com/`;
}

const colabUrl = isPython ? generateColabUrl(code) : '';
---

<div class="enhanced-code-block" data-language={language}>
  <div class="code-toolbar">
    <div class="language-badge">
      <svg class="icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="16 18 22 12 16 6"></polyline>
        <polyline points="8 6 2 12 8 18"></polyline>
      </svg>
      <span>{language.toUpperCase()}</span>
    </div>
    
    <div class="toolbar-actions">
      {isPython && (
        <a 
          href={colabUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="colab-btn"
          title="Open in Google Colab"
        >
          <img 
            src="https://colab.research.google.com/assets/colab-badge.svg" 
            alt="Open In Colab"
            class="colab-badge"
          />
        </a>
      )}
      
      <button 
        class="copy-btn" 
        data-code={code}
        title="Copy code"
        aria-label="Copy code to clipboard"
      >
        <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
          <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
        </svg>
        <svg class="check-icon hidden" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span class="btn-text">Copy</span>
      </button>
    </div>
  </div>
  
  <div class="code-content">
    <slot />
  </div>
</div>

<style>
  .enhanced-code-block {
    position: relative;
    margin: 2rem 0;
    border-radius: 0.75rem;
    background: var(--code-bg, #F7F9FC);
    border: 1px solid var(--code-border, #E1E8ED);
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .enhanced-code-block:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  .code-toolbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    background: var(--code-toolbar-bg, rgba(0, 0, 0, 0.03));
    border-bottom: 1px solid var(--code-border, #E1E8ED);
  }

  .language-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--sl-color-gray-6, #64748b);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .language-badge .icon {
    opacity: 0.7;
  }

  .toolbar-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .copy-btn,
  .colab-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 0.375rem;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    border: 1px solid var(--code-border, #E1E8ED);
    background: transparent;
    color: var(--sl-color-gray-6, #64748b);
  }

  .copy-btn:hover {
    background: rgba(0, 0, 0, 0.05);
    border-color: var(--color-primary, #FF6B35);
    color: var(--color-primary, #FF6B35);
    transform: scale(1.05);
  }

  .copy-btn.copied {
    background: var(--color-success, #2ECC71);
    color: white;
    border-color: var(--color-success, #2ECC71);
  }

  .colab-btn {
    padding: 0.25rem 0.5rem;
    border: none;
  }

  .colab-btn:hover {
    transform: scale(1.05);
    background: rgba(0, 0, 0, 0.05);
  }

  .colab-badge {
    height: 1.25rem;
    width: auto;
  }

  .copy-icon,
  .check-icon {
    width: 1rem;
    height: 1rem;
  }

  .hidden {
    display: none;
  }

  .code-content {
    overflow-x: auto;
  }

  /* Smooth scrollbar */
  .code-content::-webkit-scrollbar {
    height: 8px;
  }

  .code-content::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.05);
    border-radius: 4px;
  }

  .code-content::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
  }

  .code-content::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.3);
  }

  /* Dark mode */
  [data-theme="dark"] .enhanced-code-block {
    background: rgba(15, 23, 42, 0.8);
    border-color: rgba(255, 255, 255, 0.1);
  }

  [data-theme="dark"] .code-toolbar {
    background: rgba(0, 0, 0, 0.2);
    border-color: rgba(255, 255, 255, 0.1);
  }

  [data-theme="dark"] .copy-btn,
  [data-theme="dark"] .colab-btn {
    border-color: rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.7);
  }

  [data-theme="dark"] .copy-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }
</style>

<script>
  // Copy button functionality
  document.addEventListener('DOMContentLoaded', () => {
    const copyButtons = document.querySelectorAll('.copy-btn');
    
    copyButtons.forEach(button => {
      button.addEventListener('click', async () => {
        const codeBlock = button.closest('.enhanced-code-block');
        const codeContent = codeBlock?.querySelector('pre code')?.textContent || '';
        
        try {
          await navigator.clipboard.writeText(codeContent);
          
          // Update button state
          const copyIcon = button.querySelector('.copy-icon');
          const checkIcon = button.querySelector('.check-icon');
          const btnText = button.querySelector('.btn-text');
          
          copyIcon?.classList.add('hidden');
          checkIcon?.classList.remove('hidden');
          if (btnText) btnText.textContent = 'Copied!';
          button.classList.add('copied');
          
          // Reset after 2 seconds
          setTimeout(() => {
            copyIcon?.classList.remove('hidden');
            checkIcon?.classList.add('hidden');
            if (btnText) btnText.textContent = 'Copy';
            button.classList.remove('copied');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy code:', err);
        }
      });
    });
  });
</script>
