---
interface Props {
  notebookPath: string;
  repoOwner?: string;
  repoName?: string;
  branch?: string;
  title?: string;
  description?: string;
}

const { 
  notebookPath, 
  repoOwner = "lmfast", 
  repoName = "slmhub", 
  branch = "main",
  title = "Hands-on Notebook",
  description = "Run this directly in your browser with Google Colab (Free GPU)"
} = Astro.props;

const colabUrl = `https://colab.research.google.com/github/${repoOwner}/${repoName}/blob/${branch}/${notebookPath}`;
const rawUrl = `https://raw.githubusercontent.com/${repoOwner}/${repoName}/${branch}/${notebookPath}`;
---

<div class="notebook-actions">
  <!-- Open in Colab Badge -->
  <a href={colabUrl} target="_blank" rel="noopener noreferrer" class="badge-link colab">
    <img src="https://colab.research.google.com/assets/colab-badge.svg" alt="Open In Colab" />
  </a>
  
  <!-- Download .ipynb Badge -->
  <a href={rawUrl} download target="_blank" rel="noopener noreferrer" class="badge-button">
    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
      <polyline points="7 10 12 15 17 10"></polyline>
      <line x1="12" y1="15" x2="12" y2="3"></line>
    </svg>
    <span>Download .ipynb</span>
  </a>
</div>

<style>
  .notebook-actions {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    margin: 1.5rem 0;
  }

  .badge-link {
    display: inline-flex;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border-radius: 0.5rem;
    padding: 0.25rem;
    background: rgba(249, 171, 0, 0.05);
    border: 1px solid rgba(249, 171, 0, 0.15);
  }
  
  .badge-link:hover {
    opacity: 1;
    transform: translateY(-2px) scale(1.05);
    background: rgba(249, 171, 0, 0.1);
    border-color: rgba(249, 171, 0, 0.3);
    box-shadow: 0 4px 12px rgba(249, 171, 0, 0.2);
  }
  
  .badge-link img {
    height: 28px;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .badge-link:hover img {
    transform: scale(1.05) rotate(2deg);
  }

  /* Custom Button Badge (Download) */
  .badge-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    height: 28px;
    padding: 0 1rem;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.05) 0%, rgba(139, 92, 246, 0.03) 100%);
    color: var(--sl-color-text);
    border: 1px solid rgba(255, 107, 53, 0.2);
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  .badge-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(139, 92, 246, 0.08) 100%);
    transition: left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    z-index: -1;
  }
  
  .badge-button:hover::before {
    left: 0;
  }
  
  .badge-button:hover {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(139, 92, 246, 0.08) 100%);
    border-color: rgba(255, 107, 53, 0.4);
    color: var(--sl-color-text-accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 107, 53, 0.2);
    text-decoration: none;
  }
  
  .badge-button svg {
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .badge-button:hover svg {
    transform: translateY(-2px);
  }
  
  [data-theme="dark"] .badge-button {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.08) 0%, rgba(139, 92, 246, 0.05) 100%);
    border-color: rgba(255, 107, 53, 0.25);
  }
  
  [data-theme="dark"] .badge-button:hover {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.15) 0%, rgba(139, 92, 246, 0.1) 100%);
    border-color: rgba(255, 107, 53, 0.4);
    box-shadow: 0 4px 16px rgba(255, 107, 53, 0.25);
  }
</style>
