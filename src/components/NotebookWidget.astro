---
interface Props {
  notebookPath: string;
  repoOwner?: string;
  repoName?: string;
  branch?: string;
  title?: string;
  description?: string;
}

const { 
  notebookPath, 
  repoOwner = "lmfast", 
  repoName = "slmhub", 
  branch = "main",
  title = "Hands-on Notebook",
  description = "Run this directly in your browser with Google Colab (Free GPU)"
} = Astro.props;

const colabUrl = `https://colab.research.google.com/github/${repoOwner}/${repoName}/blob/${branch}/${notebookPath}`;
const rawUrl = `https://raw.githubusercontent.com/${repoOwner}/${repoName}/${branch}/${notebookPath}`;
---

<div class="notebook-actions">
  <!-- Open in Colab Badge -->
  <a href={colabUrl} target="_blank" rel="noopener noreferrer" class="badge-link colab">
    <img src="https://colab.research.google.com/assets/colab-badge.svg" alt="Open In Colab" />
  </a>
  
  <!-- Download .ipynb Badge -->
  <a href={rawUrl} download target="_blank" rel="noopener noreferrer" class="badge-button">
    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
      <polyline points="7 10 12 15 17 10"></polyline>
      <line x1="12" y1="15" x2="12" y2="3"></line>
    </svg>
    <span>Download .ipynb</span>
  </a>
</div>

<style>
  .notebook-actions {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    margin: 1.5rem 0;
  }

  .badge-link {
    display: inline-flex;
    transition: opacity 0.2s;
  }
  .badge-link:hover {
    opacity: 0.8;
  }
  .badge-link img {
    height: 28px; /* Compact height */
  }

  /* Custom Button Badge (Download) */
  .badge-button {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    height: 28px;
    padding: 0 0.8rem;
    background-color: transparent;
    color: var(--sl-color-text);
    border: 1px solid var(--sl-color-gray-4);
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }

  .badge-button:hover {
    background-color: var(--sl-color-gray-6);
    border-color: var(--sl-color-gray-3);
    color: var(--sl-color-text);
    text-decoration: none;
  }
</style>
