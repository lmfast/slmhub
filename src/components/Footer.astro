---
import type { Props } from '@astrojs/starlight/props';
import DefaultFooter from '@astrojs/starlight/components/Footer.astro';

const year = new Date().getFullYear();
---

<div class="custom-footer">
  <div class="footer-grid">
    <div class="footer-brand">
      <div class="brand-header">
        <img src="/slmhub/logo.svg" alt="SLM Hub" width="24" height="24" />
        <span class="brand-text">SLM Hub</span>
      </div>
      <p class="brand-desc">
        Democratizing AI with efficient, local, and private Small Language Models.
      </p>
      <div class="copyright">
        &copy; {year} LMFast Community. <br/> Apache 2.0 Licensed.
      </div>
    </div>

    <div class="footer-links">
      <h3>Course</h3>
      <ul>
        <li><a href="/slmhub/docs/start-here/">Start Here</a></li>
        <li><a href="/slmhub/docs/learn/fundamentals/">Fundamentals</a></li>
        <li><a href="/slmhub/docs/deploy/quickstarts/ollama/">Quickstarts</a></li>
        <li><a href="/slmhub/docs/learn/tutorials/">Tutorials</a></li>
      </ul>
    </div>

    <div class="footer-links">
      <h3>Resources</h3>
      <ul>
         <li><a href="/slmhub/docs/models/generated/directory/">Model Directory</a></li>
         <li><a href="/slmhub/docs/tools/hardware-picker/">Hardware Picker</a></li>
         <li><a href="/slmhub/docs/tools/resources/">Tools & Libs</a></li>
      </ul>
    </div>

    <div class="footer-links">
      <h3>Community</h3>
      <ul>
        <li><a href="/slmhub/docs/about/">About Us</a></li>
        <li><a href="/slmhub/docs/community/contributing/">Contributing</a></li>
        <li><a href="https://github.com/lmfast/slmhub/discussions">Discussions</a></li>
        <li><a href="/slmhub/docs/community/code-of-conduct/">Code of Conduct</a></li>
      </ul>
    </div>
  </div>
  
  <div class="footer-bottom">
     <!-- Keep standard Starlight footer (Edit link / Pagination) -->
     <DefaultFooter {...Astro.props} />
  </div>
</div>

<style>
  .custom-footer {
    margin-top: 6rem;
    padding-top: 4rem;
    border-top: 1px solid var(--sl-color-hairline);
    
    /* Break out of container to be full width */
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    
    background-color: var(--sl-color-bg-nav); /* Add subtle background */
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    padding: 0 1rem 3rem;
    max-width: var(--sl-content-width);
    margin: 0 auto;
  }

  .brand-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
    color: var(--sl-color-text-accent);
    font-weight: 700;
    font-size: 1.1rem;
  }

  .brand-desc {
    color: var(--sl-color-gray-3);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
    max-width: 300px;
  }

  .copyright {
    color: var(--sl-color-gray-4);
    font-size: 0.8rem;
  }

  .footer-links h3 {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--sl-color-white);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .footer-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: var(--sl-color-gray-3);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: var(--sl-color-text-accent);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>
