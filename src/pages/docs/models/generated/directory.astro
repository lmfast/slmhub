---
import { Icon } from '@astrojs/starlight/components';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import fs from 'node:fs';
import path from 'node:path';

// Read model data from JSON (generated by sync_models.py via GitHub Actions)
let allModels: {
  display_name: string;
  author?: string;
  provider?: string;
  likes?: string | number;
  downloads?: string | number;
  slug: string;
  pipeline_tag?: string;
  model_size?: string;
  model_name?: string;
  model_id?: string;
  hardware_requirements?: any;
  use_cases?: any;
  parameters?: string;
}[] = [];
let lastSyncedAt: string | null = null;
let allTasks = new Set<string>();
let allUseCases = new Set<string>();
let allHardwareReqs = new Set<string>();

try {
  const modelsPath = path.resolve(process.cwd(), 'data/models.json');
  if (!fs.existsSync(modelsPath)) {
    console.warn(`models.json not found at ${modelsPath}`);
  } else {
    const modelsDataRaw = fs.readFileSync(modelsPath, 'utf-8');
    const modelsDataObj = JSON.parse(modelsDataRaw);
    
    // Handle both old format (array) and new format (object with models array)
    const modelsData = Array.isArray(modelsDataObj) ? modelsDataObj : (modelsDataObj.models || []);
    lastSyncedAt = modelsDataObj.last_synced_at || null;
    
    // Get all models, sorted by likes (descending)
    allModels = modelsData
      .filter((m: any) => m && m.slug && m.display_name) // Filter out invalid entries
      .sort((a: any, b: any) => {
        const likesA = typeof a.likes === 'number' ? a.likes : (parseInt(String(a.likes || '0').replace(/[^\d]/g, '')) || 0);
        const likesB = typeof b.likes === 'number' ? b.likes : (parseInt(String(b.likes || '0').replace(/[^\d]/g, '')) || 0);
        return likesB - likesA;
      });
    
    // Collect unique values for filters
    allModels.forEach((m: any) => {
      if (m.pipeline_tag) allTasks.add(m.pipeline_tag);
      if (m.use_cases?.primary_use_case) allUseCases.add(m.use_cases.primary_use_case);
      if (m.use_cases?.task_types) {
        m.use_cases.task_types.forEach((t: string) => allUseCases.add(t));
      }
      
      // Hardware requirements categories
      const vram = m.hardware_requirements?.recommended_vram_gb;
      if (vram) {
        if (vram <= 4) allHardwareReqs.add('≤4GB VRAM');
        else if (vram <= 8) allHardwareReqs.add('≤8GB VRAM');
        else if (vram <= 16) allHardwareReqs.add('≤16GB VRAM');
        else allHardwareReqs.add('>16GB VRAM');
      }
    });
    
    console.log(`Loaded ${allModels.length} models from data/models.json`);
  }
} catch (e) {
  console.error('Error loading models.json:', e);
  console.warn('Using empty model list for directory page.');
}

const frontmatter = {
  title: 'Model Directory',
  description: 'Auto-updated model directory from Hugging Face Hub. Discover and compare Small Language Models.',
  template: 'splash',
  prev: false,
  next: false,
};
---

<StarlightPage frontmatter={frontmatter} headings={[]}>
  <div class="directory-container">
    <section class="directory-hero">
      <h1 class="directory-title">Model Directory</h1>
      <p class="directory-subtitle">
        Auto-updated directory from Hugging Face Hub. Discover and compare Small Language Models.
      </p>
      {lastSyncedAt && (
        <p class="directory-sync-info">
          Last synced: <strong>{new Date(lastSyncedAt).toLocaleString()}</strong>
        </p>
      )}
    </section>

    {allModels.length > 0 ? (
      <section class="directory-table-section">
        <!-- Filter Pills -->
        <div class="filter-section">
          <div class="filter-group">
            <label class="filter-label">
              <Icon name="setting" size="0.9em" />
              Task
            </label>
            <div class="filter-pills" id="taskFilters">
              <button class="filter-pill active" data-filter="all" data-type="task">Reset</button>
              {Array.from(allTasks).sort().map(task => (
                <button class="filter-pill" data-filter={task} data-type="task">{task}</button>
              ))}
            </div>
          </div>
          
          <div class="filter-group">
            <label class="filter-label">
              <Icon name="star" size="0.9em" />
              Use Cases
            </label>
            <div class="filter-pills" id="useCaseFilters">
              <button class="filter-pill active" data-filter="all" data-type="usecase">Reset</button>
              {Array.from(allUseCases).sort().map(useCase => (
                <button class="filter-pill" data-filter={useCase} data-type="usecase">{useCase}</button>
              ))}
            </div>
          </div>
          
          <div class="filter-group">
            <label class="filter-label">
              <Icon name="rocket" size="0.9em" />
              Hardware
            </label>
            <div class="filter-pills" id="hardwareFilters">
              <button class="filter-pill active" data-filter="all" data-type="hardware">Reset</button>
              {Array.from(allHardwareReqs).sort().map(hw => (
                <button class="filter-pill" data-filter={hw} data-type="hardware">{hw}</button>
              ))}
            </div>
          </div>
        </div>

        <div class="models-table-wrapper">
          <table class="models-table" id="directoryTable">
            <thead>
              <tr>
                <th class="sortable" data-column="name">
                  <span class="th-content">
                    <Icon name="list" size="1em" />
                    Model
                  </span>
                </th>
                <th class="sortable" data-column="vram">
                  <span class="th-content">
                    <Icon name="rocket" size="1em" />
                    VRAM (GB)
                  </span>
                </th>
                <th class="sortable" data-column="usecase">
                  <span class="th-content">
                    <Icon name="star" size="1em" />
                    Use Cases
                  </span>
                </th>
                <th class="sortable" data-column="size">
                  <span class="th-content">
                    <Icon name="file" size="1em" />
                    Size
                  </span>
                </th>
                <th class="sortable" data-column="likes">
                  <span class="th-content">
                    <Icon name="heart" size="1em" />
                    Likes
                  </span>
                </th>
                <th class="sortable" data-column="downloads">
                  <span class="th-content">
                    <Icon name="download" size="1em" />
                    Downloads
                  </span>
                </th>
              </tr>
            </thead>
            <tbody id="tableBody">
              {allModels.map((m) => {
                // Truncate model name if too long
                const displayName = m.display_name.length > 50 
                  ? m.display_name.substring(0, 47) + '...' 
                  : m.display_name;
                const author = (m.author || m.provider || '—') as string;
                const likesNum = typeof m.likes === 'number' ? m.likes : (parseInt(String(m.likes || '0').replace(/[^\d]/g, '')) || 0);
                const downloadsNum = typeof m.downloads === 'number' ? m.downloads : (parseInt(String(m.downloads || '0').replace(/[^\d]/g, '')) || 0);
                const likesDisplay = m.likes_human || (likesNum >= 1000 ? `${(likesNum / 1000).toFixed(1)}K` : String(likesNum));
                const downloadsDisplay = m.downloads_human || (downloadsNum >= 1000 ? `${(downloadsNum / 1000).toFixed(1)}K` : String(downloadsNum));
                const modelSize = m.model_size && m.model_size !== '—' ? m.model_size : (m.parameters || '—');
                
                // VRAM
                const vram = m.hardware_requirements?.recommended_vram_gb;
                const vramDisplay = vram ? `${vram.toFixed(1)}` : '—';
                const vramCategory = vram ? (vram <= 4 ? '≤4GB VRAM' : vram <= 8 ? '≤8GB VRAM' : vram <= 16 ? '≤16GB VRAM' : '>16GB VRAM') : '';
                
                // Use Cases
                const primaryUseCase = m.use_cases?.primary_use_case || '';
                const taskTypes = m.use_cases?.task_types || [];
                const allUseCasesForModel = [primaryUseCase, ...taskTypes].filter(Boolean).join(', ');
                const useCaseDisplay = allUseCasesForModel || m.pipeline_tag || 'General';
                
                return (
                  <tr 
                    data-name={m.display_name.toLowerCase()} 
                    data-author={author.toLowerCase()} 
                    data-task={(m.pipeline_tag || 'text-generation').toLowerCase()} 
                    data-usecase={allUseCasesForModel.toLowerCase()}
                    data-hardware={vramCategory}
                    data-size={modelSize} 
                    data-vram={vram || 0}
                    data-likes={likesNum}
                    data-downloads={downloadsNum}
                  >
                    <td class="model-name-cell">
                      <a href={`/slmhub/docs/models/generated/${m.slug}/`} title={m.display_name}>
                        {displayName}
                      </a>
                      <span class="model-author">by {author}</span>
                    </td>
                    <td class="model-vram-cell">{vramDisplay}</td>
                    <td class="model-usecase-cell">
                      <span class="usecase-tag">{useCaseDisplay}</span>
                    </td>
                    <td class="model-size-cell">{modelSize}</td>
                    <td class="model-stat-cell">
                      <Icon name="heart" size="1em" /> <span class="stat-value">{likesDisplay}</span>
                    </td>
                    <td class="model-stat-cell">
                      <Icon name="download" size="1em" /> <span class="stat-value">{downloadsDisplay}</span>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
        
        <!-- Pagination -->
        <div class="pagination-section">
          <div class="pagination-info">
            <span id="pageStart">1</span>-<span id="pageEnd">50</span> of <span id="totalRows">{allModels.length}</span>
          </div>
          <div class="pagination-controls" id="paginationControls">
            <button class="pagination-btn" id="prevBtn" disabled>
              <Icon name="left-arrow" size="0.85em" />
            </button>
            <div class="pagination-numbers" id="paginationNumbers"></div>
            <button class="pagination-btn" id="nextBtn">
              <Icon name="right-arrow" size="0.85em" />
            </button>
          </div>
        </div>
      </section>
    ) : (
      <div class="no-data">
        <p>Model data syncs daily via GitHub Actions.</p>
        {lastSyncedAt ? (
          <p class="sync-info">Last sync: <strong>{new Date(lastSyncedAt).toLocaleString()}</strong></p>
        ) : (
          <p class="sync-info">Data will be available after the first sync runs.</p>
        )}
      </div>
    )}
  </div>
</StarlightPage>

