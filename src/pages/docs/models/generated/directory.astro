---
import { Icon } from '@astrojs/starlight/components';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import fs from 'node:fs';
import path from 'node:path';

// Read model data from JSON (generated by sync_models.py via GitHub Actions)
let allModels: { display_name: string; author: string; likes: string; downloads: string; slug: string; pipeline_tag: string; model_size: string }[] = [];
let lastSyncedAt: string | null = null;
try {
  const modelsPath = path.resolve(process.cwd(), 'data/models.json');
  const modelsDataRaw = fs.readFileSync(modelsPath, 'utf-8');
  const modelsDataObj = JSON.parse(modelsDataRaw);
  
  // Handle both old format (array) and new format (object with models array)
  const modelsData = Array.isArray(modelsDataObj) ? modelsDataObj : (modelsDataObj.models || []);
  lastSyncedAt = modelsDataObj.last_synced_at || null;
  
  // Get all models, sorted by likes (descending)
  allModels = modelsData.sort((a: any, b: any) => {
    const likesA = parseInt(String(a.likes).replace(/[^\d]/g, '')) || 0;
    const likesB = parseInt(String(b.likes).replace(/[^\d]/g, '')) || 0;
    return likesB - likesA;
  });
} catch (e) {
  console.warn('models.json not found, using empty model list for directory page.');
}

const frontmatter = {
  title: 'Model Directory',
  description: 'Auto-updated model directory from Hugging Face Hub. Discover and compare Small Language Models.',
  template: 'splash',
  prev: false,
  next: false,
};
---

<StarlightPage frontmatter={frontmatter} headings={[]}>
  <div class="directory-container">
    <section class="directory-hero">
      <h1 class="directory-title">Model Directory</h1>
      <p class="directory-subtitle">
        Auto-updated directory from Hugging Face Hub. Discover and compare Small Language Models.
      </p>
      {lastSyncedAt && (
        <p class="directory-sync-info">
          Last synced: <strong>{new Date(lastSyncedAt).toLocaleString()}</strong>
        </p>
      )}
    </section>

    {allModels.length > 0 ? (
      <section class="directory-table-section">
        <div class="models-table-wrapper">
          <table class="models-table" id="directoryTable">
            <thead>
              <tr>
                <th class="sortable" data-column="name">
                  <span class="th-content">
                    <Icon name="list" size="1em" />
                    Model
                  </span>
                </th>
                <th class="sortable" data-column="task">
                  <span class="th-content">
                    <Icon name="setting" size="1em" />
                    Task
                  </span>
                </th>
                <th class="sortable" data-column="size">
                  <span class="th-content">
                    <Icon name="file" size="1em" />
                    Size
                  </span>
                </th>
                <th class="sortable" data-column="likes">
                  <span class="th-content">
                    <Icon name="heart" size="1em" />
                    Likes
                  </span>
                </th>
                <th class="sortable" data-column="downloads">
                  <span class="th-content">
                    <Icon name="download" size="1em" />
                    Downloads
                  </span>
                </th>
              </tr>
            </thead>
            <tbody>
              {allModels.map((m) => {
                // Truncate model name if too long
                const displayName = m.display_name.length > 50 
                  ? m.display_name.substring(0, 47) + '...' 
                  : m.display_name;
                return (
                  <tr 
                    data-name={m.display_name.toLowerCase()} 
                    data-author={m.author.toLowerCase()} 
                    data-task={(m.pipeline_tag || 'text-generation').toLowerCase()} 
                    data-size={m.model_size || '—'} 
                    data-likes={parseInt(String(m.likes).replace(/[^\d]/g, '')) || 0}
                    data-downloads={parseInt(String(m.downloads).replace(/[^\d]/g, '')) || 0}
                  >
                    <td class="model-name-cell">
                      <a href={`/slmhub/docs/models/generated/${m.slug}/`} title={m.display_name}>
                        {displayName}
                      </a>
                      <span class="model-author">by {m.author}</span>
                    </td>
                    <td class="model-task-cell">
                      <span class="task-tag">{m.pipeline_tag || 'text-generation'}</span>
                    </td>
                    <td class="model-size-cell">{m.model_size || '—'}</td>
                    <td class="model-stat-cell">
                      <Icon name="heart" size="1em" /> <span class="stat-value">{m.likes}</span>
                    </td>
                    <td class="model-stat-cell">
                      <Icon name="download" size="1em" /> <span class="stat-value">{m.downloads}</span>
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      </section>
    ) : (
      <div class="no-data">
        <p>Model data syncs daily via GitHub Actions.</p>
        {lastSyncedAt ? (
          <p class="sync-info">Last sync: <strong>{new Date(lastSyncedAt).toLocaleString()}</strong></p>
        ) : (
          <p class="sync-info">Data will be available after the first sync runs.</p>
        )}
      </div>
    )}
  </div>
</StarlightPage>

<style is:global>
  .directory-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 3rem 2rem 6rem;
    min-height: 80vh;
  }

  .directory-hero {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
  }

  .directory-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #FF6B35, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    letter-spacing: -0.02em;
  }

  .directory-subtitle {
    font-size: 1.25rem;
    color: var(--sl-color-gray-3);
    margin-bottom: 1rem;
    line-height: 1.6;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .directory-sync-info {
    font-size: 0.95rem;
    color: var(--sl-color-gray-4);
    margin-top: 1rem;
  }

  .directory-sync-info strong {
    color: var(--sl-color-accent);
    font-weight: 600;
  }

  .directory-table-section {
    margin-top: 2rem;
  }

  .models-table-wrapper {
    border-radius: 1rem;
    overflow: hidden;
    border: 1px solid rgba(255, 107, 53, 0.2);
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.05) 0%, rgba(139, 92, 246, 0.03) 100%);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.1), 0 2px 8px rgba(255, 107, 53, 0.1);
    backdrop-filter: blur(12px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .models-table-wrapper:hover {
    border-color: rgba(255, 107, 53, 0.3);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15), 0 4px 16px rgba(255, 107, 53, 0.15);
  }

  [data-theme="dark"] .models-table-wrapper {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.08) 0%, rgba(139, 92, 246, 0.05) 100%);
    border-color: rgba(255, 107, 53, 0.25);
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.4), 0 2px 8px rgba(255, 107, 53, 0.15);
  }

  [data-theme="dark"] .models-table-wrapper:hover {
    border-color: rgba(255, 107, 53, 0.35);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5), 0 4px 16px rgba(255, 107, 53, 0.2);
  }

  .models-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
  }

  .models-table thead {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.18) 0%, rgba(139, 92, 246, 0.12) 100%);
    backdrop-filter: blur(8px);
  }

  .models-table th {
    padding: 1rem 1.25rem;
    text-align: left;
    font-weight: 700;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    color: var(--sl-color-white);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    cursor: pointer;
    user-select: none;
    transition: all 0.2s ease;
  }

  .models-table th.sortable:hover {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.25) 0%, rgba(139, 92, 246, 0.18) 100%);
    transform: translateY(-1px);
  }

  .th-content {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .th-content :global(svg) {
    width: 1rem;
    height: 1rem;
    opacity: 0.7;
  }

  .models-table td {
    padding: 0.9rem 1.25rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    color: var(--sl-color-gray-2);
  }

  .models-table tbody tr {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .models-table tbody tr:hover {
    background: linear-gradient(90deg, rgba(255, 107, 53, 0.12) 0%, rgba(139, 92, 246, 0.08) 100%);
    transform: translateX(2px);
    box-shadow: inset 4px 0 0 rgba(255, 107, 53, 0.4);
  }

  .models-table tbody tr:last-child td {
    border-bottom: none;
  }

  .model-name-cell {
    max-width: 350px;
  }

  .model-name-cell a {
    color: var(--sl-color-text-accent);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
    display: block;
  }

  .model-name-cell a:hover {
    color: var(--sl-color-accent-high);
    text-decoration: underline;
  }

  .model-author {
    display: block;
    color: var(--sl-color-gray-4);
    font-size: 0.8rem;
    margin-top: 0.25rem;
    font-weight: normal;
  }

  .model-task-cell {
    min-width: 120px;
  }

  .task-tag {
    display: inline-block;
    background: rgba(255, 107, 53, 0.15);
    color: var(--sl-color-accent);
    font-size: 0.7rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    text-transform: uppercase;
  }

  .model-size-cell {
    font-size: 0.85rem;
    color: var(--sl-color-gray-3);
    white-space: nowrap;
  }

  .model-stat-cell {
    font-size: 0.85rem;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .model-stat-cell :global(svg) {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
    opacity: 0.7;
  }

  .stat-value {
    font-weight: 600;
  }

  .no-data {
    text-align: center;
    color: var(--sl-color-gray-4);
    padding: 3rem;
    background: rgba(0, 0, 0, 0.2);
    border-radius: 1rem;
    border: 1px dashed rgba(255, 255, 255, 0.1);
  }

  .no-data p {
    margin: 0.5rem 0;
  }

  .sync-info {
    margin-top: 1rem;
    font-size: 0.9rem;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .directory-container {
      padding: 2rem 1.5rem 4rem;
    }

    .directory-title {
      font-size: 2.5rem;
    }

    .models-table-wrapper {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .models-table {
      min-width: 800px;
    }
  }

  @media (max-width: 768px) {
    .directory-title {
      font-size: 2rem;
    }

    .directory-subtitle {
      font-size: 1rem;
    }

    .models-table th,
    .models-table td {
      padding: 0.75rem 1rem;
      font-size: 0.8rem;
    }

    .model-name-cell {
      max-width: 250px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const table = document.getElementById('directoryTable');
    if (!table) return;

    const headers = table.querySelectorAll('th.sortable');
    let sortState: Record<string, { direction: string; active: boolean }> = {};

    headers.forEach(header => {
      const column = header.getAttribute('data-column');
      if (!column) return;
      
      sortState[column] = { direction: 'asc', active: false };

      header.addEventListener('click', () => {
        const tbody = table.querySelector('tbody');
        if (!tbody) return;
        
        const rows = Array.from(tbody.querySelectorAll('tr'));

        const isAsc = sortState[column].direction === 'asc';
        sortState[column].direction = isAsc ? 'desc' : 'asc';

        headers.forEach(h => {
          h.style.opacity = h === header ? '1' : '0.6';
        });

        rows.sort((a, b) => {
          let aValue = a.getAttribute(`data-${column}`) || '';
          let bValue = b.getAttribute(`data-${column}`) || '';

          // Try to parse as numbers for numeric columns
          if (column === 'likes' || column === 'downloads') {
            aValue = String(parseInt(String(aValue).replace(/[^\d]/g, '')) || 0);
            bValue = String(parseInt(String(bValue).replace(/[^\d]/g, '')) || 0);
            const aNum = parseInt(aValue) || 0;
            const bNum = parseInt(bValue) || 0;
            return sortState[column].direction === 'asc' ? aNum - bNum : bNum - aNum;
          }
          
          // Handle size column (parse GB/MB etc)
          if (column === 'size') {
            const parseSize = (val: string) => {
              if (!val || val === '—') return 0;
              const num = parseFloat(val);
              if (val.includes('TB')) return num * 1000;
              if (val.includes('GB')) return num;
              if (val.includes('MB')) return num / 1000;
              if (val.includes('KB')) return num / 1000000;
              return num / 1000000000;
            };
            const aNum = parseSize(aValue);
            const bNum = parseSize(bValue);
            return sortState[column].direction === 'asc' ? aNum - bNum : bNum - aNum;
          }

          // String comparison
          return sortState[column].direction === 'asc'
            ? aValue.localeCompare(bValue)
            : bValue.localeCompare(aValue);
        });

        rows.forEach(row => tbody.appendChild(row));
      });
    });
  });
</script>
