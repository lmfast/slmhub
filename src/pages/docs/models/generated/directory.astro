<script>
  document.addEventListener('DOMContentLoaded', () => {
    const table = document.getElementById('directoryTable');
    if (!table) return;

    const tbody = table.querySelector('tbody');
    if (!tbody) return;

    const headers = table.querySelectorAll('th.sortable');
    let sortState: Record<string, { direction: string; active: boolean }> = {};
    
    // Pagination state
    const ROWS_PER_PAGE = 50;
    let currentPage = 1;
    let filteredRows: HTMLTableRowElement[] = [];
    let allRows: HTMLTableRowElement[] = Array.from(tbody.querySelectorAll('tr'));
    
    // Filter state
    let activeFilters = {
      task: 'all',
      usecase: 'all',
      hardware: 'all'
    };

    // Initialize
    filteredRows = [...allRows];
    updatePagination();
    renderPage();

    // Filter functionality
    const filterButtons = document.querySelectorAll('.filter-pill');
    filterButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const filterType = btn.getAttribute('data-type') as 'task' | 'usecase' | 'hardware';
        const filterValue = btn.getAttribute('data-filter') || 'all';
        
        // Update active state
        const siblings = btn.parentElement?.querySelectorAll('.filter-pill');
        siblings?.forEach(s => s.classList.remove('active'));
        btn.classList.add('active');
        
        // Update filter state
        activeFilters[filterType] = filterValue;
        
        // Apply filters
        applyFilters();
        currentPage = 1;
        updatePagination();
        renderPage();
      });
    });

    function applyFilters() {
      filteredRows = allRows.filter(row => {
        const taskMatch = activeFilters.task === 'all' || 
          row.getAttribute('data-task')?.includes(activeFilters.task.toLowerCase());
        
        const usecaseMatch = activeFilters.usecase === 'all' || 
          row.getAttribute('data-usecase')?.toLowerCase().includes(activeFilters.usecase.toLowerCase());
        
        const hardwareMatch = activeFilters.hardware === 'all' || 
          row.getAttribute('data-hardware') === activeFilters.hardware;
        
        return taskMatch && usecaseMatch && hardwareMatch;
      });
      
      // Update total count
      const totalRowsEl = document.getElementById('totalRows');
      if (totalRowsEl) {
        totalRowsEl.textContent = String(filteredRows.length);
      }
    }

    function renderPage() {
      const start = (currentPage - 1) * ROWS_PER_PAGE;
      const end = start + ROWS_PER_PAGE;
      
      // Hide all rows
      allRows.forEach(row => row.classList.add('hidden'));
      
      // Show only current page rows
      filteredRows.slice(start, end).forEach(row => row.classList.remove('hidden'));
      
      // Update page info
      const pageStartEl = document.getElementById('pageStart');
      const pageEndEl = document.getElementById('pageEnd');
      
      if (pageStartEl) pageStartEl.textContent = String(filteredRows.length > 0 ? start + 1 : 0);
      if (pageEndEl) pageEndEl.textContent = String(Math.min(end, filteredRows.length));
    }

    function updatePagination() {
      const totalPages = Math.ceil(filteredRows.length / ROWS_PER_PAGE);
      
      // Update prev/next buttons
      const prevBtn = document.getElementById('prevBtn') as HTMLButtonElement;
      const nextBtn = document.getElementById('nextBtn') as HTMLButtonElement;
      
      if (prevBtn) prevBtn.disabled = currentPage === 1;
      if (nextBtn) nextBtn.disabled = currentPage === totalPages || totalPages === 0;
      
      // Render page numbers
      const paginationNumbers = document.getElementById('paginationNumbers');
      if (!paginationNumbers) return;
      
      paginationNumbers.innerHTML = '';
      
      // Show max 7 page numbers
      let startPage = Math.max(1, currentPage - 3);
      let endPage = Math.min(totalPages, startPage + 6);
      
      if (endPage - startPage < 6) {
        startPage = Math.max(1, endPage - 6);
      }
      
      for (let i = startPage; i <= endPage; i++) {
        const pageBtn = document.createElement('button');
        pageBtn.className = 'pagination-number';
        pageBtn.textContent = String(i);
        if (i === currentPage) pageBtn.classList.add('active');
        
        pageBtn.addEventListener('click', () => {
          currentPage = i;
          updatePagination();
          renderPage();
        });
        
        paginationNumbers.appendChild(pageBtn);
      }
    }

    // Pagination controls
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    
    prevBtn?.addEventListener('click', () => {
      if (currentPage > 1) {
        currentPage--;
        updatePagination();
        renderPage();
      }
    });
    
    nextBtn?.addEventListener('click', () => {
      const totalPages = Math.ceil(filteredRows.length / ROWS_PER_PAGE);
      if (currentPage < totalPages) {
        currentPage++;
        updatePagination();
        renderPage();
      }
    });

    // Sorting functionality
    headers.forEach(header => {
      const column = header.getAttribute('data-column');
      if (!column) return;
      
      sortState[column] = { direction: 'asc', active: false };

      header.addEventListener('click', () => {
        const isAsc = sortState[column].direction === 'asc';
        sortState[column].direction = isAsc ? 'desc' : 'asc';

        headers.forEach(h => {
          h.style.opacity = h === header ? '1' : '0.6';
        });

        filteredRows.sort((a, b) => {
          let aValue = a.getAttribute(`data-${column}`) || '';
          let bValue = b.getAttribute(`data-${column}`) || '';

          // Try to parse as numbers for numeric columns
          if (column === 'likes' || column === 'downloads' || column === 'vram') {
            const aNum = parseFloat(aValue) || 0;
            const bNum = parseFloat(bValue) || 0;
            return sortState[column].direction === 'asc' ? aNum - bNum : bNum - aNum;
          }
          
          // Handle size column (parse GB/MB etc)
          if (column === 'size') {
            const parseSize = (val: string) => {
              if (!val || val === '—') return 0;
              const num = parseFloat(val);
              if (val.includes('TB')) return num * 1000;
              if (val.includes('GB')) return num;
              if (val.includes('MB')) return num / 1000;
              if (val.includes('KB')) return num / 1000000;
              if (val.includes('B')) return num;
              return num / 1000000000;
            };
            const aNum = parseSize(aValue);
            const bNum = parseSize(bValue);
            return sortState[column].direction === 'asc' ? aNum - bNum : bNum - aNum;
          }

          // String comparison
          return sortState[column].direction === 'asc'
            ? aValue.localeCompare(bValue)
            : bValue.localeCompare(aValue);
        });

        // Re-append sorted rows to tbody
        filteredRows.forEach(row => tbody.appendChild(row));
        
        // Re-render current page
        renderPage();
      });
    });
  });
</script>
