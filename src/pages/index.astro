  }

  .content {
    max-width: 48rem;
    margin: 4rem auto;
    line-height: 1.7;
  }

  .content h2 {
    margin-top: 3rem;
    margin-bottom: 1rem;
    font-size: 2rem;
  }

  .content ul {
    list-style: disc;
    padding-left: 2rem;
  }

  .content li {
    margin: 0.5rem 0;
  }

  .content a {
    color: #6366f1;
    text-decoration: none;
  }

  .content a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.5rem;
    }
    
