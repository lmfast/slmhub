  }

  .button.secondary {
    background: white;
    color: #6366f1;
    border: 2px solid #6366f1;
  }

  .button.secondary:hover {
    background: #f8fafc;
    border-color: #4f46e5;
  }

  .features {
    margin: 4rem 0;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .feature-card {
    padding: 2rem;
    border: 1px solid #e2e8f0;
    border-radius: 0.75rem;
    transition: all 0.2s;
  }

  .feature-card:hover {
    border-color: #6366f1;
