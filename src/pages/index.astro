  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .feature-card h3 {
    margin: 0 0 0.5rem 0;
    font-size: 1.5rem;
  }

  .feature-card p {
    color: #64748b;
    margin: 0 0 1rem 0;
  }

  .feature-card a {
    color: #6366f1;
    text-decoration: none;
    font-weight: 500;
  }

  .feature-card a:hover {
