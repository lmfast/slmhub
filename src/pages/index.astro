<style>
  :global(html) {
    font-family: system-ui, -apple-system, sans-serif;
  }
  
  .homepage {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero {
    text-align: center;
    padding: 4rem 0;
    border-bottom: 1px solid #e2e8f0;
    margin-bottom: 4rem;
  }

  .hero h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
