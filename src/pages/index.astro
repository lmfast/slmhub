---
import { Card, CardGrid } from '@astrojs/starlight/components';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';
import Footer from '../components/Footer.astro';
import fs from 'node:fs';
import path from 'node:path';

// Read model data from JSON (generated by sync_models.py via GitHub Actions)
let topModels: { display_name: string; author: string; likes: string; downloads: string; slug: string; pipeline_tag: string }[] = [];
try {
  const modelsPath = path.resolve(process.cwd(), 'data/models.json');
  const modelsData = JSON.parse(fs.readFileSync(modelsPath, 'utf-8'));
  // Sort by likes (descending) and take top 6
  topModels = modelsData
    .sort((a: any, b: any) => {
      const likesA = parseInt(String(a.likes).replace(/[^\d]/g, '')) || 0;
      const likesB = parseInt(String(b.likes).replace(/[^\d]/g, '')) || 0;
      return likesB - likesA;
    })
    .slice(0, 6);
} catch (e) {
  // If file not found (e.g., first build), use empty array
  console.warn('models.json not found, using empty model list for homepage.');
}

const frontmatter = {
  title: 'SLM Hub',
  description: 'Developer-centric documentation for Small Language Models (SLMs). Learn, choose, and deploy locally or at the edge.',
  template: 'splash',
  prev: false,
  next: false,
};
---

<StarlightPage frontmatter={frontmatter} headings={[]}>
  <div class="sl-container homepage">
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-content">
        <h1 class="hero-title">
          Small Models. <span class="gradient-text">Big Impact.</span>
        </h1>
        <p class="hero-tagline">
          The open-source learning platform for Small Language Models. 
          <strong>100% executable</strong> ‚Äî every guide runs in Google Colab.
        </p>
        <div class="hero-actions">
          <a href="/slmhub/docs/start-here/" class="sl-link-button" data-variant="primary">
            <span>Start Learning ‚Üí</span>
          </a>
          <a href="/slmhub/docs/models/generated/directory/" class="sl-link-button" data-variant="minimal">
            <span>Browse Models</span>
          </a>
        </div>
      </div>
      <div class="hero-image">
        <img src="/slmhub/logo.svg" alt="SLM Hub Logo" />
      </div>
    </section>

    <!-- Courses Section (Exhaustive List) -->
    <section class="courses-section">
      <h2 class="section-title">ÔøΩ Courses</h2>
      <p class="section-subtitle">Everything you need to master Small Language Models ‚Äî from first principles to production deployment.</p>

      <div class="courses-grid">
        <!-- Fundamentals Column -->
        <div class="course-column">
          <h3 class="column-title">üß† Fundamentals</h3>
          <ul class="course-list">
            <li><a href="/slmhub/docs/start-here/">Start Here: Introduction to SLMs</a></li>
            <li><a href="/slmhub/docs/learn/fundamentals/what-is-ai/">What is AI? (ML, DL, Neural Networks)</a></li>
            <li><a href="/slmhub/docs/learn/fundamentals/genai-basics/">Generative AI Basics</a></li>
            <li><a href="/slmhub/docs/learn/fundamentals/slm-vs-llm/">SLM vs LLM: Trade-offs & When to Use</a></li>
            <li><a href="/slmhub/docs/learn/fundamentals/tokenization/">Tokenization (BPE, Subword, Byte-level)</a></li>
            <li><a href="/slmhub/docs/learn/fundamentals/architecture/">Model Architecture (Transformers, Attention)</a></li>
            <li><a href="/slmhub/docs/learn/fundamentals/embeddings/">Embeddings & Vector Representations</a></li>
            <li><a href="/slmhub/docs/learn/fundamentals/quantization/">Quantization (4-bit, 8-bit, GPTQ, GGUF)</a></li>
            <li><a href="/slmhub/docs/learn/fundamentals/prompting-for-slms/">Prompting Strategies for SLMs</a></li>
            <li><a href="/slmhub/docs/learn/fundamentals/fine-tuning/">Fine-Tuning (LoRA, QLoRA, PEFT)</a></li>
          </ul>
        </div>

        <!-- Concepts Column -->
        <div class="course-column">
          <h3 class="column-title">üí° Concepts</h3>
          <ul class="course-list">
            <li><a href="/slmhub/docs/learn/concepts/rag/">RAG: Retrieval-Augmented Generation</a></li>
            <li><a href="/slmhub/docs/learn/concepts/function-calling/">Function Calling & Tool Use</a></li>
            <li><a href="/slmhub/docs/learn/concepts/agents/">Building AI Agents (ReAct Loop)</a></li>
            <li><a href="/slmhub/docs/learn/concepts/datasets/">Dataset Curation & Quality Filtering</a></li>
          </ul>

          <h3 class="column-title" style="margin-top: 2rem;">üöÄ Deployment</h3>
          <ul class="course-list">
            <li><a href="/slmhub/docs/deploy/quickstarts/ollama/">Ollama Quickstart (Local)</a></li>
            <li><a href="/slmhub/docs/deploy/quickstarts/vllm/">vLLM for High-Throughput Serving</a></li>
            <li><a href="/slmhub/docs/deploy/quickstarts/llama-cpp/">llama.cpp for CPU/Edge</a></li>
            <li><a href="/slmhub/docs/deploy/quickstarts/transformers-js/">Transformers.js (In-Browser)</a></li>
          </ul>
        </div>

        <!-- Tools & Resources Column -->
        <div class="course-column">
          <h3 class="column-title">ÔøΩ Tools & Resources</h3>
          <ul class="course-list">
            <li><a href="/slmhub/docs/tools/model-picker/">Interactive Model Picker</a></li>
            <li><a href="/slmhub/docs/tools/hardware-picker/">Hardware Calculator (VRAM)</a></li>
            <li><a href="/slmhub/docs/tools/resources/">Libraries & Frameworks</a></li>
            <li><a href="/slmhub/docs/tools/prompt-eval-harness/">Prompt Evaluation Harness</a></li>
          </ul>

          <h3 class="column-title" style="margin-top: 2rem;">üë• Community</h3>
          <ul class="course-list">
            <li><a href="/slmhub/docs/about/">About SLM Hub</a></li>
            <li><a href="/slmhub/docs/community/contributing/">Contributing Guide</a></li>
            <li><a href="https://github.com/lmfast/slmhub/discussions">GitHub Discussions</a></li>
            <li><a href="/slmhub/docs/community/code-of-conduct/">Code of Conduct</a></li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Top Models Section (Improved) -->
    <section class="models-section">
      <h2 class="section-title">üèÜ Top Models</h2>
      <p class="section-subtitle">Auto-synced from Hugging Face daily. Sorted by community popularity.</p>
      
      {topModels.length > 0 ? (
        <div class="models-grid">
          {topModels.map((m) => (
            <div class="model-card">
              <div class="model-header">
                <h4><a href={`/slmhub/docs/models/generated/${m.slug}/`}>{m.display_name}</a></h4>
                <span class="model-author">by {m.author}</span>
              </div>
              <div class="model-meta">
                <span class="tag">{m.pipeline_tag || 'text-generation'}</span>
              </div>
              <div class="model-stats">
                <span>‚ù§Ô∏è {m.likes}</span>
                <span>‚¨áÔ∏è {m.downloads}</span>
              </div>
              <p class="model-use-case">
                {m.pipeline_tag === 'text-generation' && 'Chatbots, content generation, code assistance'}
                {m.pipeline_tag === 'text2text-generation' && 'Translation, summarization, Q&A'}
                {m.pipeline_tag === 'text-to-code' && 'Code generation, debugging, documentation'}
                {!m.pipeline_tag && 'General-purpose language tasks'}
              </p>
            </div>
          ))}
        </div>
      ) : (
        <p class="no-data">Model data syncs daily via GitHub Actions. Check back soon!</p>
      )}
      <div class="cta-link">
        <a href="/slmhub/docs/models/generated/directory/">View All Models ‚Üí</a>
      </div>
    </section>

    <!-- Newsletter Section (Compact Inline) -->
    <section class="newsletter-section-compact">
      <div class="newsletter-inline">
        <span class="newsletter-label">üì¨ Stay Updated</span>
        <form class="newsletter-form-inline" action="https://buttondown.email/api/emails/embed-subscribe/slmhub" method="post" target="_blank">
          <input type="email" name="email" placeholder="your@email.com" required />
          <button type="submit">Subscribe</button>
        </form>
      </div>
    </section>

  </div>
</StarlightPage>

<style>
  /* ============================================
     2026 Premium Homepage Styles
     ============================================ */

  /* Keyframe Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(2deg); }
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.7; }
  }

  @keyframes gradientShift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  @keyframes blobMorph {
    0%, 100% { border-radius: 40% 60% 70% 30% / 40% 50% 60% 50%; }
    50% { border-radius: 54% 46% 38% 62% / 49% 70% 30% 51%; }
  }

  /* Base Section Styles */
  .homepage {
    padding-bottom: 4rem;
    position: relative;
    overflow-x: hidden;
  }

  .section-title {
    font-size: 2.2rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 0.75rem;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    animation: fadeInUp 0.6s ease-out;
  }

  .section-subtitle {
    text-align: center;
    color: var(--sl-color-gray-3);
    margin-bottom: 3rem;
    font-size: 1.1rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeInUp 0.6s ease-out 0.1s both;
  }

  /* ============================================
     Hero Section
     ============================================ */
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    padding: 5rem 0 4rem;
    min-height: 60vh;
    position: relative;
  }

  /* Organic blob backgrounds */
  .hero::before {
    content: '';
    position: absolute;
    top: -20%;
    right: -15%;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(255, 107, 53, 0.15), transparent 70%);
    animation: blobMorph 10s ease-in-out infinite, float 12s ease-in-out infinite;
    z-index: 0;
    pointer-events: none;
  }

  .hero::after {
    content: '';
    position: absolute;
    bottom: -20%;
    left: -10%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(74, 144, 226, 0.1), transparent 70%);
    animation: blobMorph 12s ease-in-out infinite reverse, float 15s ease-in-out infinite reverse;
    z-index: 0;
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    animation: fadeInUp 0.8s ease-out;
  }

  .hero-title {
    font-size: 3.8rem;
    font-weight: 800;
    line-height: 1.05;
    margin-bottom: 1.5rem;
    font-family: 'Space Grotesk', system-ui, sans-serif;
    letter-spacing: -0.02em;
  }

  /* Animated Gradient Text */
  .gradient-text {
    background: linear-gradient(135deg, #FF6B35, #FF9F7A, #8B5CF6, #FF6B35);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 5s ease infinite;
  }

  .hero-tagline {
    font-size: 1.25rem;
    margin-bottom: 2.5rem;
    line-height: 1.7;
    color: var(--sl-color-gray-2);
    max-width: 500px;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-image {
    position: relative;
    z-index: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  .hero-image img {
    max-width: 320px;
    width: 100%;
    height: auto;
    filter: drop-shadow(0 30px 60px rgba(255, 107, 53, 0.25));
    animation: float 6s ease-in-out infinite;
  }

  /* ============================================
     Courses Section (3-Column Grid)
     ============================================ */
  .courses-section {
    padding: 5rem 0;
    position: relative;
  }

  .courses-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2.5rem;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .course-column {
    background: linear-gradient(145deg, rgba(255,255,255,0.03) 0%, rgba(255,255,255,0.01) 100%);
    border: 1px solid rgba(255,255,255,0.08);
    border-radius: 1rem;
    padding: 1.5rem;
  }

  .column-title {
    font-size: 1rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--sl-color-white);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .course-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .course-list li {
    margin-bottom: 0.5rem;
  }

  .course-list a {
    color: var(--sl-color-gray-3);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s, padding-left 0.2s;
    display: block;
    padding: 0.35rem 0;
  }

  .course-list a:hover {
    color: var(--sl-color-text-accent);
    padding-left: 0.5rem;
  }

  /* ============================================
     Models Cards (Grid)
     ============================================ */
  .models-section {
    padding: 5rem 0;
    position: relative;
  }

  .models-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .model-card {
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-hairline);
    border-radius: 1rem;
    padding: 1.25rem;
    transition: all 0.3s;
  }

  .model-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    border-color: rgba(255, 107, 53, 0.3);
  }

  .model-header h4 {
    font-size: 1rem;
    font-weight: 700;
    margin: 0 0 0.25rem 0;
  }

  .model-header h4 a {
    color: var(--sl-color-text-accent);
    text-decoration: none;
  }

  .model-header h4 a:hover {
    text-decoration: underline;
  }

  .model-author {
    font-size: 0.8rem;
    color: var(--sl-color-gray-4);
  }

  .model-meta {
    margin: 0.75rem 0;
  }

  .model-meta .tag {
    display: inline-block;
    background: rgba(255, 107, 53, 0.1);
    color: var(--sl-color-accent);
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    text-transform: uppercase;
  }

  .model-stats {
    display: flex;
    gap: 1rem;
    font-size: 0.85rem;
    color: var(--sl-color-gray-3);
    margin-bottom: 0.75rem;
  }

  .model-use-case {
    font-size: 0.8rem;
    color: var(--sl-color-gray-4);
    margin: 0;
    line-height: 1.4;
    font-style: italic;
  }

  .cta-link {
    text-align: center;
    margin-top: 2.5rem;
    animation: fadeInUp 0.6s ease-out 0.3s both;
  }

  .cta-link a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--sl-color-text-accent);
    font-weight: 600;
    text-decoration: none;
    padding: 0.75rem 1.5rem;
    border: 2px solid var(--sl-color-accent);
    border-radius: 999px;
    transition: all 0.3s;
  }

  .cta-link a:hover {
    background: var(--sl-color-accent);
    color: white;
    transform: scale(1.05);
  }

  .no-data {
    text-align: center;
    color: var(--sl-color-gray-4);
    font-style: italic;
    padding: 3rem;
  }

  /* ============================================
     Newsletter Section (Compact Inline)
     ============================================ */
  .newsletter-section-compact {
    padding: 2rem 0 3rem;
  }

  .newsletter-inline {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    padding: 1.5rem 2rem;
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-hairline);
    border-radius: 999px;
    max-width: 700px;
    margin: 0 auto;
  }

  .newsletter-label {
    font-weight: 600;
    font-size: 1rem;
    color: var(--sl-color-white);
    white-space: nowrap;
  }

  .newsletter-form-inline {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .newsletter-form-inline input[type="email"] {
    padding: 0.6rem 1rem;
    border: 1px solid var(--sl-color-hairline);
    border-radius: 999px;
    font-size: 0.9rem;
    background: var(--sl-color-bg);
    color: var(--sl-color-text);
    min-width: 180px;
  }

  .newsletter-form-inline input[type="email"]:focus {
    outline: none;
    border-color: var(--sl-color-accent);
  }

  .newsletter-form-inline button {
    padding: 0.6rem 1.25rem;
    background: var(--sl-color-accent);
    color: white;
    border: none;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .newsletter-form-inline button:hover {
    background: #E85A2A;
    transform: scale(1.05);
  }
  /* ============================================
     Responsive Design
     ============================================ */
  @media (max-width: 1024px) {
    .courses-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .models-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero {
      grid-template-columns: 1fr;
      text-align: center;
      padding: 3rem 0;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-tagline {
      font-size: 1.1rem;
      margin-left: auto;
      margin-right: auto;
    }

    .hero-actions {
      justify-content: center;
    }

    .hero-image img {
      max-width: 200px;
    }

    .hero::before, .hero::after {
      width: 250px;
      height: 250px;
    }

    .courses-grid {
      grid-template-columns: 1fr;
    }

    .models-grid {
      grid-template-columns: 1fr;
    }

    .section-title {
      font-size: 1.8rem;
    }

    .newsletter-inline {
      border-radius: 1rem;
      flex-direction: column;
      text-align: center;
    }
  }
</style>
