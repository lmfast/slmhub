    color: #64748b;
    margin: 0 0 2rem 0;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
  }

  .button.primary {
    background: #6366f1;
    color: white;
  }

  .button.primary:hover {
    background: #4f46e5;
    transform: translateY(-2px);
